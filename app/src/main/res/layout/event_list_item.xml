<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/event_card_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_color"
            android:paddingTop="@dimen/content_padding_normal"
            android:paddingBottom="@dimen/content_padding_normal"
            android:paddingRight="@dimen/content_padding_normal"
            android:paddingLeft="5dp"
            android:textColor="@color/text_color">

            <RelativeLayout
                android:id="@+id/date_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/content_padding_normal"
                    android:textColor="@color/text_color"
                    android:layout_centerHorizontal="true"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/event_date_below"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/content_padding_normal"
                    android:layout_below="@+id/event_date"
                    android:textColor="@color/text_color"
                    android:layout_centerHorizontal="true"
                    android:textSize="14dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/date_wrapper"
                android:layout_toRightOf="@+id/date_wrapper"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/event_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_name"
                android:layout_toEndOf="@+id/date_wrapper"
                android:layout_toRightOf="@+id/date_wrapper"
                android:textColor="@color/text_color"
                android:textSize="12dp" />
        </RelativeLayout>
        <!--<LinearLayout-->
        <!--android:id="@+id/my_tag_recycler_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:scrollbars="vertical"-->
        <!--android:layout_toRightOf="@+id/contact_img"-->
        <!--android:layout_toEndOf="@+id/contact_img"-->
        <!--android:layout_below="@id/contact_name"-->
        <!--android:orientation="horizontal"></LinearLayout>-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_card_header"
            android:layout_marginTop="30px"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="20px">

            <LinearLayout
                android:id="@+id/event_contact_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>