<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/primaryDark">

        <com.pkmmte.circularimageview.CircularImageView
            android:id="@+id/user_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar"
            app:civ_border="false"
            app:civ_selector="true"
            app:civ_selector_color="@android:color/transparent"
            app:civ_selector_stroke_color="@color/theme_primary"
            app:civ_selector_stroke_width="1dp"
            app:civ_shadow="false" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/default_username"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_icon_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/common_events_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_perm_contact_calendar_white_48dp"
                android:tint="@color/primary_text_color" />

            <TextView
                android:id="@+id/common_events_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/default_icon_text"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/common_friends_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_person_white_48dp"
                android:tint="@color/primary_text_color" />

            <TextView
                android:id="@+id/common_friends_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/default_icon_text"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/common_skills_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_star_white_48dp"
                android:tint="@color/primary_text_color" />

            <TextView
                android:id="@+id/common_skills_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/default_icon_text"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/common_events_icon_big"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/profile_header"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_perm_contact_calendar_black_48dp" />

    <TextView
        android:id="@+id/common_events_heading"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/profile_header"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/common_events_icon_big"
        android:text="@string/common_events"
        android:textColor="@android:color/black"
        android:textSize="20dp" />
    <!-- Example events -->
    <TextView
        android:id="@+id/ex1_event"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@id/common_events_heading"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/common_events_icon_big"
        android:text="@string/common_events_ex1"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/ex2_event"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@id/ex1_event"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/common_events_icon_big"
        android:text="@string/common_events_ex2"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/ex3_event"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@id/ex2_event"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/common_events_icon_big"
        android:text="@string/common_events_ex3"
        android:textColor="@android:color/black"
        android:textSize="16dp" />


    <ImageView
        android:id="@+id/common_friends_icon_big"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ex3_event"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_person_black_48dp" />

    <TextView
        android:id="@+id/common_friends_heading"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/ex3_event"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/common_events_icon_big"
        android:text="@string/common_friends"
        android:textColor="@android:color/black"
        android:textSize="20dp" />
    <!-- Example events -->
    <TextView
        android:id="@+id/ex1_friend"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@id/common_friends_heading"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/common_friends_icon_big"
        android:text="@string/common_friends_ex1"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/ex2_friend"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@id/ex1_friend"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/common_friends_icon_big"
        android:text="@string/common_friends_ex2"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

</RelativeLayout>